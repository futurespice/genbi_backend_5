# ============================================
# DATABASE CONFIGURATION
# ============================================

# Для локальной разработки (PostgreSQL в Docker)
POSTGRES_USER=genbi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SERVER=localhost
POSTGRES_PORT=5433
POSTGRES_DB=genbi_db

# Для облачной БД (например, Neon, Supabase, AWS RDS)
# Раскомментируйте и используйте вместо локальных настроек:
# CONNECTION_STRING=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT Secret Key - ОБЯЗАТЕЛЬНО СГЕНЕРИРОВАТЬ НОВЫЙ!
# Для генерации: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_BEFORE_PRODUCTION_USE_openssl_rand_-hex_32

# Время жизни токенов (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=11520
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# ============================================
# APPLICATION CONFIGURATION
# ============================================

PROJECT_NAME=Genbi Admin Panel
API_V1_STR=/api/v1

# CORS Origins (для продакшена указать конкретные домены)
CORS_ORIGINS=*

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT=5/minute
REGISTER_RATE_LIMIT=3/hour
API_RATE_LIMIT=100/minute

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# ВАЖНО ПЕРЕД ДЕПЛОЕМ:
# ============================================
# 1. Сгенерируйте SECRET_KEY: openssl rand -hex 32
# 2. Создайте надёжный POSTGRES_PASSWORD
# 3. Настройте CORS_ORIGINS на конкретные домены
# 4. НЕ коммитьте .env в Git!
# ============================================
